# =====================================================
# HTTPS VERSION (With SSL - RECOMMENDED)
# =====================================================
server {
    listen 443 ssl http2;
    server_name yourdomain.com www.yourdomain.com;

    # SSL Certificate (Let's Encrypt recommended)
    ssl_certificate /etc/letsencrypt/live/yourdomain.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/yourdomain.com/privkey.pem;
    
    # SSL Settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_session_tickets off;

    # HSTS (optional but recommended)
    add_header Strict-Transport-Security "max-age=63072000" always;

    # Proxy settings
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        
        # WebSocket support (for Next.js HMR in dev)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_cache_bypass $http_upgrade;
        
        # ==========================================
        # CRITICAL HEADERS FOR AUTH/COOKIES TO WORK
        # ==========================================
        
        # Forward the original host
        proxy_set_header Host $host;
        
        # Forward the original client IP
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        
        # CRITICAL: Tell the app it's being accessed via HTTPS
        # This MUST be set to 'https' for secure cookies to work!
        proxy_set_header X-Forwarded-Proto https;
        
        # Forward the original host (backup)
        proxy_set_header X-Forwarded-Host $host;
        
        # Alternative HTTPS indicator headers
        proxy_set_header X-Forwarded-SSL on;
        proxy_set_header X-Forwarded-Scheme https;
        
        # ==========================================
        # CRITICAL: COOKIE HANDLING
        # ==========================================
        
        # Forward incoming cookies to the backend
        proxy_set_header Cookie $http_cookie;
        
        # Pass Set-Cookie headers from backend to client
        proxy_pass_header Set-Cookie;
        
        # Ensure cookies are not modified by Nginx
        proxy_cookie_path / /;
        
        # ==========================================
        # TIMEOUTS AND BUFFERS
        # ==========================================
        
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Buffer settings
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
    }
    
    # Optional: Separate location for API routes with no caching
    location /api/ {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        
        # Headers (same as above)
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-SSL on;
        
        # Cookie handling
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;
        proxy_cookie_path / /;
        
        # Disable caching for API routes
        proxy_no_cache 1;
        proxy_cache_bypass 1;
        add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0" always;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}

# =====================================================
# HTTP to HTTPS Redirect
# =====================================================
server {
    listen 80;
    server_name yourdomain.com www.yourdomain.com;
    
    # Redirect all HTTP traffic to HTTPS
    return 301 https://$server_name$request_uri;
}

# =====================================================
# ENVIRONMENT VARIABLES REQUIRED IN YOUR .env FILE:
# =====================================================
#
# NEXT_PUBLIC_BASE_URL=https://yourdomain.com
# NEXTAUTH_URL=https://yourdomain.com        # Optional, for consistency
# JWT_SECRET=your-super-secure-random-key-32-chars-minimum
# TRUST_HOST=true                            # Enable proxy trust
# DATABASE_URL=postgresql://user:pass@localhost:5432/dbname
#
# =====================================================
# TROUBLESHOOTING CHECKLIST:
# =====================================================
#
# 1. Verify Nginx config: sudo nginx -t
# 2. Check X-Forwarded-Proto is being set: 
#    curl -I https://yourdomain.com/api/health -H "Cookie: auth_token=xxx"
# 3. Check browser DevTools -> Application -> Cookies
#    - Cookie should have Secure=true, SameSite=Lax, HttpOnly=true
# 4. Verify NEXT_PUBLIC_BASE_URL matches your actual domain (with https://)
# 5. Clear browser cookies and try logging in fresh
# 6. Check Nginx error logs: sudo tail -f /var/log/nginx/error.log
# 7. Check Next.js logs for cookie debug output
#
